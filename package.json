{
    "name": "animation-assistant",
    "version": "1.0.0",
    "description": "Animation assistant for a web application",
    "main": "src/scripts/classes/AnimationAssistant.ts",
    "scripts": {
        "production": "cross-env NODE_ENV=production webpack",
        "development": "cross-env NODE_ENV=development webpack",
        "server": "cross-env NODE_ENV=development webpack serve",
        "ts-watch": "tsc-watch src/scripts/AnimationAssistant.ts",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix --color",
        "publish": "npm publish"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "git add"
        ]
    },
    "keywords": [
        "animation",
        "css-animation",
        "animate",
        "animation-assistant"
    ],
    "author": "Denis Lopatin www.denis-lopatin@yandex.ru",
    "license": "ISC",
    "browserslist": [
        "> 1%"
    ],
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "autoprefixer": "^10.1.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.1",
        "css-minimizer-webpack-plugin": "^1.1.5",
        "eslint": "^7.16.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "file-loader": "^6.2.0",
        "html-loader": "^1.3.2",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.6",
        "lint-staged": "^10.5.3",
        "mini-css-extract-plugin": "^1.3.3",
        "postcss": "^8.2.1",
        "postcss-loader": "^4.1.0",
        "prettier": "^2.2.1",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.30.0",
        "sass-loader": "^10.1.0",
        "style-loader": "^2.0.0",
        "terser-webpack-plugin": "^5.0.3",
        "ts-loader": "^9.2.6",
        "tsc-watch": "^4.5.0",
        "typescript": "^4.5.2",
        "webpack": "^5.11.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0"
    },
    "dependencies": {
        "@babel/polyfill": "^7.12.1",
        "animate.css": "^4.1.1",
        "csshake": "^1.5.3",
        "hover.css": "^2.3.2",
        "magic.css": "^1.4.6",
        "repaintless": "^1.4.0"
    }
