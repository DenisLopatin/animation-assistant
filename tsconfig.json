{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES2016",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "preserveConstEnums": true,
    "lib": [
      "dom",
      "dom.Iterable",
      "es5",
      "scripthost",
      "es2015.iterable",
      "webworker"
    ],
    "typeRoots": ["src/declare", "node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}
