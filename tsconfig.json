{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
//    "checkJs": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "preserveConstEnums": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable",
      "webworker"
    ],
    "typeRoots": ["src/declare", "node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src"]
}
